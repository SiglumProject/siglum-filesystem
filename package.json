{
  "name": "@siglum/filesystem",
  "version": "0.2.1",
  "description": "Unified filesystem abstraction for browser storage (OPFS, IndexedDB)",
  "keywords": [
    "filesystem",
    "opfs",
    "indexeddb",
    "browser",
    "storage",
    "file-system",
    "origin-private-file-system"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker.js",
      "types": "./dist/worker.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "bun test",
    "prepublishOnly": "bun run clean && bun run build && bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.2.2",
    "fake-indexeddb": "^6.0.0",
    "typescript": "~5.6.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SiglumProject/siglum-filesystem"
  }
}
